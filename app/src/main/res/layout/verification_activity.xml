<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/siem_logo"
        android:layout_marginTop="60dp"
        android:layout_width="200dp"
        android:layout_height='200dp'
        android:src="@drawable/siem_logo"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/otp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/siem_logo"
        android:layout_marginLeft="60dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Enter OTP:"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/verify_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otp_tv"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:backgroundTint="@color/brown"/>
    <Button
        android:id="@+id/btn_verify"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/verify_et"
        android:layout_width="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="wrap_content"
        android:text="Verify"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_verify"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:text="Resend OTP"
        android:textColor="@color/purple_200"
        android:textAlignment="center"
        android:textSize="15dp" />


</RelativeLayout>